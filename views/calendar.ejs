<div class="modal fade new-order" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title w-100">New Appointment &emsp; <span id='dateBox' class='pull-right'></span></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id='aptFrm' action='/newAppointment' method='POST'>
          <input type='hidden' name=apt[status] value='pending'>
          <input id='aptDate' type='hidden' name='apt[date]' value='CHANGE ME'>
          <div class="col-12 pull-left">
            <div class='form-group'>
              <input class='form-control' type='text' name='apt[owner]' placeholder="Pet Owner Name">
            </div>
          </div>
          <div class="col-6 pull-left">
            <div class='form-group'>
              <input class='form-control' type='text' name='apt[pet]' placeholder="Pet Name">
            </div>
            <div class='form-group'>
              <input class='form-control' type='text' name='apt[breed]' placeholder="Breed">
            </div>
          </div>
          <div class="col-6 pull-right">
            <div class='form-group'>
              <input class='form-control' type='text' name='apt[phone]' placeholder="Phone Number">
            </div>
            <div class='form-group'>
              <input class='form-control' type='text' name='apt[email]' placeholder="Email Address">
            </div>
          </div>
          <div class="col-12 pull-left">
            <textarea rows='3' class='form-control' name='apt[about]' placeholder='Notes. . .'></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button id='aptSubmit' type="button" class="btn btn-primary">Submit</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


